                {% else %}
                  {% assign profile_image_class = 'img-fluid z-depth-1 rounded' %}
                {% endif %}
                {% capture sizes %}(min-width: {{site.max_width}}) {{ site.max_width | minus: 30 | times: 0.3 }}px, (min-width: 576px) 30vw, 95vw"{% endcapture %}
                {% include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=profile.image %}
              {% endif %}
              {% if profile.name %}
                <strong class="profile-name">{{ profile.name }}</strong>
              {% endif %}
              {% if profile.more_info %}
                <div class="more-info">{{ profile.more_info }}</div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
        <div class="clearfix"></div>
      </div>

      <div class="section">
        <h2 class="section-title">MS student</h2>
        {% for profile in page.profiles %}
          {% if profile.name == "Boeun Kim" or profile.name == "Oshunlola, Boluwatife Alimat"%}
            <div class="profile float-left">
              {% if profile.image %}
                {% assign profile_image_path = profile.image | prepend: 'assets/img/' %}
                {% if profile.image_circular %}
                  {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
                {% else %}
                  {% assign profile_image_class = 'img-fluid z-depth-1 rounded' %}
                {% endif %}
                {% capture sizes %}(min-width: {{site.max_width}}) {{ site.max_width | minus: 30 | times: 0.3 }}px, (min-width: 576px) 30vw, 95vw"{% endcapture %}
                {% include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=profile.image %}
              {% endif %}
              {% if profile.name %}
                <strong class="profile-name">{{ profile.name }}</strong>
              {% endif %}
              {% if profile.more_info %}
                <div class="more-info">{{ profile.more_info }}</div>
              {% endif %}
            </div>
          {% endif %}

        {% endfor %}
        <div class="clearfix"></div>
      </div>

      <div class="section">
        <h2 class="section-title">Undergraduate student</h2>
        {% for profile in page.profiles %}
          {% if profile.name == "Jeeeun Park" or profile.name == "Hyunsol Mun" or profile.name == "Gyurim Kim"%}
            <div class="profile float-left">
              {% if profile.image %}
                {% assign profile_image_path = profile.image | prepend: 'assets/img/' %}
                {% if profile.image_circular %}
                  {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
                {% else %}
                  {% assign profile_image_class = 'img-fluid z-depth-1 rounded' %}
                {% endif %}
                {% capture sizes %}(min-width: {{site.max_width}}) {{ site.max_width | minus: 30 | times: 0.3 }}px, (min-width: 576px) 30vw, 95vw"{% endcapture %}
                {% include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=profile.image %}
              {% endif %}
              {% if profile.name %}
                <strong class="profile-name">{{ profile.name }}</strong>
              {% endif %}
              {% if profile.more_info %}
                <div class="more-info">{{ profile.more_info }}</div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
        <div class="clearfix"></div>
      </div>
    {% endif %}
  </article>
</div>
