---
layout: page
---
<style>
  .flex-container {
    display: flex;
    align-items: flex-start;
    gap: 40px; /* 이미지와 텍스트 사이 여백 */
    max-width: 1000px;
    margin: 0 auto;
  }

  .profile-left {
    width: 250px; /* ✅ 이미지 영역 고정 */
    flex-shrink: 0;
  }

  .profile-left img {
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 8px; /* 필요에 따라 */
  }

  .profile-right {
    flex: 1; /* ✅ 남은 공간 자동으로 차지 */
    min-width: 0;
  }

  .prof-name {
    font-size: 40px; /* 제목의 글자 크기 설정 */
    font-weight: bold; /* 제목을 두껍게 설정 */
    margin-bottom: 50px; /* 제목과 아래쪽 요소 간의 간격 설정 */
    color: #171036; /* 제목의 글자 색상 설정 */
  }

  .cv {
    display: flex;
    margin-top: 100px; /* 제목과 아래쪽 요소 간의 간격 설정 */
    margin-right: 10px; /* 각 프로필 이미지의 우측 여백 설정 */
  }
  
  .profile {
    width: 270px;
 /* 각 프로필 이미지의 우측 여백 설정 */
    margin-bottom: 20px; /* 프로필의 아래 간격 설정 */
  }

  .profile-name {
    font-size: 20px; /* 제목의 글자 크기 설정 */
    font-weight: bold; /* 제목을 두껍게 설정 */
    text-align: center;
    margin: 0; /* 기본 마진 제거 */
  }

  .profile img {
    width: 200px !important;
    height: 250px !important;
    margin-bottom: 20px !important; /* 각 프로필 이미지의 아래 여백 설정 */
    object-fit: cover !important;
  }

  .section-title {
    font-size: 40px; /* 제목의 글자 크기 설정 */
    font-weight: bold; /* 제목을 두껍게 설정 */
    margin-top: 30px; /* 제목과 위쪽 요소 간의 간격 설정 */
    margin-bottom: 30px; /* 제목과 아래쪽 요소 간의 간격 설정 */
    color: #171036; /* 제목의 글자 색상 설정 */
  }


  .clearfix::after {
    content: "";
    clear: both;
    display: table;
  }

</style>

<div class="post">
  <article>
    {% if page.profiles %}
      <div class="section">
        <h2 class="section-title">Professor</h2>
        {% for profile in page.profiles %}
          {% if profile.name == "Jongkil Kim" %}
            <div class="flex-container">
              <div class="profile-left">
                {% if profile.image %}
                  {% assign profile_image_path = profile.image | prepend: 'assets/img/' %}
                  {% if profile.image_circular %}
                    {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
                  {% else %}
                    {% assign profile_image_class = 'img-fluid z-depth-1 rounded' %}
                  {% endif %}
                  {% capture sizes %}(min-width: {{site.max_width}}) {{ site.max_width | minus: 30 | times: 0.3 }}px, (min-width: 576px) 30vw, 95vw"{% endcapture %}
                  {% include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=profile.image %}
                {% endif %}
                {% if profile.more_info %}
                  <div class="more-info">{{ profile.more_info }}</div>
                {% endif %}
              </div>
              <div class="profile-right">
                {% if profile.name %}
                  <strong class="prof-name">{{ profile.name }}</strong>
                {% endif %}
                {% if profile.content %}
                  <div class="clearfix">
                    {% capture profile_content %}{% include_relative {{ profile.content }} %}{% endcapture %}
                    {{ profile_content | markdownify }}
                  </div>
                {% endif %}
              </div>
            </div>

           
            <div class="clearfix"></div>
            <hr>
          {% endif %}
        {% endfor %}
      </div>

      <!-- Repeat similar blocks for other sections without the specific layout for Jongkil Kim -->
      <div class="section">
        <h2 class="section-title">Ph.D student</h2>
        {% for profile in page.profiles %}
          {% if profile.name == "Djebbi, Ella" or profile.name == "Yeonhee Kim" %}
