---
layout: default
---

<style>
  html, body {
      margin: 0;
      padding: 0;
      overflow-x: hidden;
  }

  .header-content {
      color: white;
      font-size: 3em;
      font-weight: bold;
      text-align: center;
      background: rgba(0, 0, 0, 0.5);
      padding: 20px;
      border-radius: 10px;
  }

  /* 본문 제목과 날짜 스타일 */
  .post-title {
      font-size: 2.5em;
      font-weight: bold;
      margin-bottom: 10px;
  }

  .post-date {
      font-size: 1.1em;
      color: #888;
      margin-bottom: 20px;
  }

  .divider {
      width: 90%;
      height: 1px;
      background: var(--global-divider-color)
      margin: 20px auto;
  }

  article {
      margin: 40px auto;
      padding: 0 20px;
      max-width: 800px;
  }

  .caption {
      text-align: center;
      font-size: 0.9em;
      color: #555;
      margin-top: 10px;
  }
</style>

<!-- 검은 헤더 그대로 유지 -->
<div class="post">

  <!-- 본문 내용 -->
  <article>
    <!-- 제목과 날짜를 본문에 포함 -->
    <h1 class="post-title">{{ page.description }}</h1>
    <p class="post-date">{{ page.start_date | date: "%Y. %m. %d" }}</p>

    <div class="divider"></div>

    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
